{
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git stash*)",
      "Bash(git stash pop)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git fetch*)",
      "Bash(git merge*)",
      "Bash(git rebase*)",
      "Bash(git show*)",
      "Bash(git blame*)",
      "Bash(npm install*)",
      "Bash(npm run*)",
      "Bash(npm test*)",
      "Bash(npx*)",
      "Bash(yarn*)",
      "Bash(pnpm*)",
      "Bash(python*)",
      "Bash(pip install*)",
      "Bash(pytest*)",
      "Bash(go test*)",
      "Bash(go build*)",
      "Bash(go run*)",
      "Bash(go mod*)",
      "Bash(docker compose up*)",
      "Bash(docker compose down*)",
      "Bash(docker compose logs*)",
      "Bash(ls*)",
      "Bash(cat*)",
      "Bash(echo*)",
      "Bash(mkdir*)",
      "Bash(cp*)",
      "Bash(mv*)",
      "Bash(which*)",
      "Bash(env*)",
      "Bash(pwd)"
    ],
    "deny": [
      "Bash(git push --force origin main*)",
      "Bash(git push --force origin master*)",
      "Bash(git push -f origin main*)",
      "Bash(git push -f origin master*)",
      "Bash(git reset --hard HEAD~*)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~*)",
      "Bash(chmod 777*)",
      "Bash(sudo rm*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-edit-format.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-bash-guard.sh"
          }
        ]
      }
    ]
  }
}
